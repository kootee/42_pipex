{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "C Launch",
            "type": "cppdbg",
            "request": "launch",
			"program": "${workspaceFolder}/pipex",
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/env_file.txt", 
            "externalConsole": false,
            "MIMode": "lldb",
			"args": ["file_in.txt", "cat -a", "wc", "file_out.txt"],
			"setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
			"stopAtEntry": false,
            "serverLaunchTimeout": 5000,
            "filterStderr": false,
            "filterStdout": false,
            "logging": {
                "moduleLoad": false,
                "trace": true,
                "traceResponse": true
            },
		}
	]
}