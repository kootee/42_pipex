{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "C Launch",
            "type": "cppdbg",
            "request": "launch",
			"program": "${workspaceFolder}/pipex",
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/env_file.txt", 
            "externalConsole": false,
            "MIMode": "lldb",
			"args": ["f_in.txt", "cat", "wc", "f_out.txt"],
			"stopAtEntry": true,
            "serverLaunchTimeout": 5000,
            "filterStderr": false,
            "filterStdout": false,
            "logging": {
                "moduleLoad": false,
                "trace": true,
                "traceResponse": true
            },
		}
	]
}